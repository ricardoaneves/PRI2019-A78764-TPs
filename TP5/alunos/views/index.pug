extends layout
block content
    .w3-container
        header
            h2 Gestor de Alunos
        .w3-card-4
            header.w3-container.w3-teal
                h3 Registar novo aluno   
            .w3-container
                form.w3-container(action='/alunos' method='POST')
                    label
                        b Número
                    input.w3-input.w3-border.w3-light-grey(type='text' name='numero')
                    label 
                        b Nome
                    input.w3-input.w3-border.w3-light-grey(type='text' name='nome')
                    label 
                        b Curso
                    input.w3-input.w3-border.w3-light-grey(type='text' name='curso')
                    input.w3-btn.w3-blue-grey(type='submit' value='Adicionar')

        .w3-card-4
            header.w3-container.w3-teal
                h3 Lista de alunos
            table.w3-table-all.w3-centered
                tr
                    th Número
                    th Nome
                    th Curso
                    th Notas
                    th Remover
                each a in lista
                    tr
                        td= a.numero
                        td= a.nome
                        td= a.curso
                        td 
                            form.w3-container(action='/alunos/' + a.numero + '/notas' method = 'GET')
                                input.w3-btn.w3-blue-grey(type='submit' value='Ver notas') 
                        td
                            button.w3-button.w3-blue-grey(onclick="apagaAluno('" + a.numero + "')") Remover

        footer.w3-container.w3-teal
            address Gerado por Ricardo Neves ::
               