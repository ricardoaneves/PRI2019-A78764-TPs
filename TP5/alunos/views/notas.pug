extends layout
block content
    .w3-container
        header
            h2= aluno.nome
        .w3-card-4
            header.w3-container.w3-teal
                h3 Registar nova nota 
            .w3-container
                form.w3-container(action='/alunos/'+aluno.numero+'/notas' method='POST')
                    label
                        b Identificador
                    input.w3-input.w3-border.w3-light-grey(type='text' name='identificador')
                    label 
                        b Nota
                    input.w3-input.w3-border.w3-light-grey(type='text' name='nota')
                    input.w3-btn.w3-blue-grey(type='submit' value='Adicionar')

        .w3-card-4
            header.w3-container.w3-teal
                h3 Notas
            table.w3-table-all.w3-centered
                tr
                    th Identificador
                    th Nota
                    th Remover
                each n in aluno.notas
                    tr
                        td= n.identificador
                        td= n.nota
                        td
                            button.w3-button.w3-blue-grey(onclick="apagaNota('" + aluno.numero + ',' + n.identificador + "')") Remover

        footer.w3-container.w3-teal
            address Gerado por Ricardo Neves ::
                a(href='/alunos')  Voltar